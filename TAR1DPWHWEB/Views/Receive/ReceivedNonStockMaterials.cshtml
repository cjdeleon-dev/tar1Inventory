@model IPagedList<TAR1DPWHDATA.DataModels.ReceiveMaterialHeaderModel>

@{
    ViewBag.Title = "Received Non-Stock Materials";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using PagedList;
@using PagedList.Mvc;


<script src="~/Scripts/myscripts/receivingnonstockscripts.js"></script>

<h4>Received Non-Stock Materials</h4>

<p>
    <div class="row">
        <div class="col-lg-6">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="initDefaultFields();">New Receiving Non-Stock Material</button><br />
        </div>
        <div class="col-lg-6" style="padding:0;text-align:right;">
            @using (Html.BeginForm("ReceivedNonStockMaterials", "Receive", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-md-offset-5 col-md-6">
                        <div class="col-md-9" style="padding:0;">
                            <input type="text" class="form-control" name="search" placeholder="Search Received By" />
                        </div>
                        <div class="col-md-3" style="padding:0;text-align:left;">
                            <button type="submit" class="btn btn-success" name="submit">Search</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</p>
<div class="row">
    <div class="col-md-6">
        <table class="table table-striped table-bordered table-hover" id="myTable1">
            <thead bgcolor="lightblue">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().ReceivedDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().PreparedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().ReceivedTotalCost)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>

            <tbody class="tbody">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr style="background-color: white;">
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReceivedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PreparedBy)
                            </td>
                            <td style="text-align:right">
                                @Html.DisplayFor(modelItem => item.ReceivedTotalCost)
                            </td>
                            <td style="text-align:center;">
                                <a href="#" onclick="return printPreview(@item.Id);"><i class="glyphicon glyphicon-print"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr style="background-color: red;">
                        <td colspan="5"><strong>No Records Found.</strong></td>
                    </tr>
                }
            </tbody>

        </table>
        @if (Model != null)
        {
            <div class="row">
                <div class="col-lg-6">
                    <b>Total Record(s): @Model.TotalItemCount</b>
                </div>
                <div class="col-lg-6" style="text-align:right;">
                    @if (Model.PageCount < Model.PageNumber)
                    {
                        <b>Page 0 of 0</b>
                    }
                    else
                    {
                        <b>Page @Model.PageNumber of @Model.PageCount</b>
                    }
                </div>
            </div>
            @Html.PagedListPager(Model, i => Url.Action("ReceivedNonStockMaterials", "Receive", new { search = Request.QueryString["search"], i }))

        }
    </div>
    <div class="col-md-6">
        <table class="table table-bordered table-hover" id="myTable2">
            <thead bgcolor="lightblue">
                <tr>
                    <th>
                        Material
                    </th>
                    <th style="text-align:center;">
                        Qty
                    </th>
                    <th style="text-align:center;">
                        Unit
                    </th>
                    <th style="text-align:center;">
                        U. Cost
                    </th>
                    <th style="text-align:center;">
                        Total Cost
                    </th>
                </tr>
            </thead>
            <tbody class="tbodyright"></tbody>
        </table>
    </div>
</div>

@*Modal for new Receiving Material-----------------------------------------------------------------------------------------*@
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">X</button>
                <h4 class="modal-title" id="myModalLabel">Receiving Non-Stock Material</h4>
            </div>
            <div class="modal-body small">
                <form>
                    <div class="form-group">
                        <h6 style="color:blue;">Header</h6>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-3">
                                    <input type="hidden" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                                    <label for="ReceivedDate">Date: </label>
                                    <input type="date" class="form-control" id="ReceivedDate" style="min-width: 100%" />
                                </div>
                                <div class="col-md-4">
                                    <input type="hidden" class="form-control" id="PreparedById" placeholder="Id" disabled="disabled" />
                                    <label for="PreparedBy">Prepared By: </label>
                                    <input type="text" class="form-control" id="PreparedBy" placeholder="Prepared By" style="min-width: 100%" disabled="disabled" />
                                </div>
                                <div class="col-md-4">
                                    <input type="hidden" class="form-control" id="SupplierId" />
                                    <label for="Supplier">Supplier:</label><br />
                                    <select id="Supplier" class="form-control select2 select2-hidden-accessible" onchange="return cboSupplierOnChange();" style="min-width: 100%"></select>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-md-1" style="text-align:right;padding-top:5px;"><label for="PO1">PO: </label></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="PO1" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="PO2" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="PO3" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="PO4" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="PO5" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                            </div>
                            <div class="row">
                                <div class="col-md-1" style="text-align:right;padding-top:5px;"><label for="SI1">SI: </label></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="SI1" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="SI2" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="SI3" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="SI4" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="SI5" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                            </div>
                            <div class="row">
                                <div class="col-md-1" style="text-align:right;padding-top:5px;"><label for="DR1">DR: </label></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="DR1" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="DR2" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="DR3" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="DR4" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                                <div class="col-md-2"><input type="text" class="form-control" id="DR5" style="min-width: 100%" onkeypress="return isNumber(event)" /></div>
                            </div>

                        </div>
                        <hr />
                        <div class="form-group">
                            <h6 style="color:blue;">Detail Entry</h6>
                            <div class="row">
                                <div class="col-md-4">
                                    <input type="hidden" id="MaterialId" />
                                    <label for="Material">Select Material: </label>
                                    <select id="Material" class="form-control select2 select2-hidden-accessible" onchange="return cboMaterialOnChange();" style="min-width: 100%"></select>
                                </div>
                                <div class="col-md-2" style="text-align:center;">
                                    <input type="hidden" class="form-control" id="UnitId" />
                                    <label for="Unit">Unit </label>
                                    <select id="Unit" class="form-control select2 select2-hidden-accessible" onchange="return cboUnitOnChange();" style="min-width: 100%"></select>
                                </div>
                                <div class="col-md-2" style="text-align:center;">
                                    <label for="Quantity">QTY </label>
                                    <input type="text" class="form-control" id="Quantity" style="min-width: 100%; text-align:center;" onkeypress="return isNumber(event)" placeholder="0" />
                                </div>
                                <div class="col-md-2" style="text-align:center;">
                                    <label for="TotalCost">Total Cost </label>
                                    <input type="text" class="form-control" id="TotalCost" onkeypress="return validateFloatKeyPress(this, event);" style="min-width: 100%; text-align:right;" placeholder="0.00" />
                                </div>
                                <div class="col-md-2" style="padding-top:22px;">
                                    <button type="button" class="btn btn-success" id="btnAddNonStockMaterialItem" onclick="addNonStockMaterialItem();">Add Non-Stock</button>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <h6 style="color:blue;">Details</h6>
                            <table class="table table-striped table-bordered table-hover" id="tblMDetails" style="padding-left:10px;padding-right:10px;">
                                <thead bgcolor="lightblue">
                                    <tr>
                                        <th style="text-align:center;display:none;">
                                            MaterialId
                                        </th>
                                        <th style="text-align:center;">
                                            Material
                                        </th>
                                        <th style="text-align:center;display:none;">
                                            UnitId
                                        </th>
                                        <th style="text-align:center;">
                                            Unit
                                        </th>
                                        <th style="text-align:center;">
                                            Qty
                                        </th>
                                        <th style="text-align:center;">
                                            UCost
                                        </th>
                                        <th style="text-align:center;">
                                            Total Cost
                                        </th>
                                        <th style="text-align:center;">
                                            Inv. Cost
                                        </th>
                                        <th style="text-align:center;">
                                            VAT
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="tbodydetail"></tbody>
                            </table>
                            <hr />
                            <div class="row">
                                <div class="col-xs-3">
                                    <input type="hidden" class="form-control" id="ReceivedById" />
                                    <label for="ReceivedBy">Received By: </label>
                                    <select id="ReceivedBy" class="form-control select2 select2-hidden-accessible" onchange="return cboSig1OnChange();" style="min-width: 100%"></select>
                                </div>
                                <div class="col-xs-3">
                                    <input type="hidden" class="form-control" id="NotedById" />
                                    <label for="NotedBy">Noted By: </label>
                                    <select id="NotedBy" class="form-control select2 select2-hidden-accessible" onchange="return cboSig2OnChange();" style="min-width: 100%"></select>
                                </div>
                                <div class="col-xs-3">
                                    <input type="hidden" class="form-control" id="AuditedById" />
                                    <label for="AuditedBy">Audited By: </label>
                                    <select id="AuditedBy" class="form-control select2 select2-hidden-accessible" onchange="return cboSig3OnChange();" style="min-width: 100%"></select>
                                </div>
                                <div class="col-xs-3">
                                    <label for="ReceivedTotalCost">Received Total Cost </label>
                                    <input type="text" class="form-control" id="ReceivedTotalCost" style="min-width: 100%; text-align:right;" disabled="disabled" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAddRecNonStockMat" onclick="addReceivingNonStockMaterials();">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@*End of Modal for Receiving Material--------------------------------------------------------------------------------------------*@

