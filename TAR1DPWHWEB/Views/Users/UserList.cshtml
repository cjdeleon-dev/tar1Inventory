@model IPagedList<TAR1DPWHDATA.DataModels.UserModel>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using PagedList;
@using PagedList.Mvc;

<script src="~/Scripts/myscripts/adminuserscripts.js"></script>

<h4>Users</h4>

<p>
    <div class="row">
        <div class="col-lg-6">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearAllTextBoxes();">Add User</button><br />
        </div>
        <div class="col-lg-6" style="padding:0;text-align:right;">
            @using (Html.BeginForm("UserList", "Users", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-md-offset-4 col-md-7">
                        <div class="col-md-9" style="padding:0;">
                            <input type="text" class="form-control" name="search" placeholder="Search User's First Name" />
                        </div>
                        <div class="col-md-3" style="padding:0;text-align:left;">
                            <button type="submit" class="btn btn-success" name="submit">Search</button>
                        </div>
                    </div>
                </div>


            }
        </div>
    </div>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead bgcolor="lightblue">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().MiddleInitial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Address)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody class="tbody">
        @if (Model != null)
        {
            foreach (var item in Model)
            {
        <tr style="background-color: white;">
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleInitial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a href="#" onclick="return getbyID(@item.Id);"><i class="glyphicon glyphicon-edit"></i></a>
                <a href="#" onclick="return deactivateUserById(@item.Id);"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
            }
        }
        else
        {
            <tr style="background-color: red;">
                <td colspan="3"><strong>No Records Found.</strong></td>
            </tr>
        }
    </tbody>

</table>

@if (Model != null)
{
    <div class="row">
        <div class="col-lg-6">
            <b>Total Record(s): @Model.TotalItemCount</b>
        </div>
        <div class="col-lg-6" style="text-align:right;">
            @if (Model.PageCount < Model.PageNumber)
            {
                <b>Page 0 of 0</b>
            }
            else
            {
                <b>Page @Model.PageNumber of @Model.PageCount</b>
            }
        </div>
    </div>
    @Html.PagedListPager(Model, i => Url.Action("UserList", "Users", new { search = Request.QueryString["search"], i }))

}

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">X</button>
                <h4 class="modal-title" id="myModalLabel">Adding New User</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-5">
                                    <label for="FirstName">First Name: </label>
                                    <input type="text" class="form-control" id="FirstName" placeholder="First Name" style="min-width: 100%" />
                                </div>
                                <div class="col-md-3">
                                    <label for="MiddleInitial">Middle Initial: </label>
                                    <input type="text" class="form-control" id="MiddleInitial" placeholder="Middle Initial" />
                                </div>
                                <div class="col-md-4">
                                    <label for="LastName">Last Name: </label>
                                    <input type="text" class="form-control" id="LastName" placeholder="Last Name" style="min-width: 100%" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Address">Address: </label>
                        <input type="text" class="form-control" id="Address" placeholder="Address" style="min-width: 100%" />
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <input type="hidden" class="form-control" id="PositionId" style="min-width: 100%" />
                                <label for="Position">Position: </label>
                                <select id="Position" class="form-control select2 select2-hidden-accessible" onchange="return cboPostOnChange();" style="min-width: 100%"></select>
                            </div>
                            <div class="col-md-6">
                                <input type="hidden" class="form-control" id="RoleId" style="min-width: 100%" />
                                <label for="Role">Role: </label>
                                <select id="Role" class="form-control select2 select2-hidden-accessible" onchange="return cboRoleOnChange();" style="min-width: 100%"></select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="isActive" id="lblIsActive">Active: </label>
                        <input type="checkbox" id="isActive" style="text-align:center;" />
                    </div>

                    <hr id="sepline" />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="UserName" id="lbluname">User Name: </label>
                                <input type="text" class="form-control" id="UserName" placeholder="User Name" />
                            </div>
                            <div class="col-md-6">
                                <label for="Password" id="lblpass">Password: </label>
                                <input type="password" class="form-control" id="Password" placeholder="Password" style="min-width: 100%" />
                            </div>
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label for="RePassword" id="lblrepass">Re-Type Password: </label>
                        <input type="password" class="form-control" id="RePassword" placeholder="Re-Type Password" style="min-width: 100%" />
                    </div>*@
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAddUser" onclick="addUser();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdateUser" style="display:none;" onclick="updateUser();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>